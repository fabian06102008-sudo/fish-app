<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishApp.Views.FishDatabasePage"
             Title="Fisch-Datenbank">
    <VerticalStackLayout Padding="24" Spacing="16">
        <SearchBar Placeholder="Fisch suchen" Text="{Binding SearchQuery}" />
        <CollectionView ItemsSource="{Binding FishItems}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="16" Margin="0,6" CornerRadius="12" BackgroundColor="#E8EAF6">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="Herkunft: {Binding Origin}" FontSize="12" />
                            <Label Text="Temperament: {Binding Temperament}" FontSize="12" />
                            <Label Text="pH: {Binding MinPh}-{Binding MaxPh}" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
