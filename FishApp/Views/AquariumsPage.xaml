<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishApp.Views.AquariumsPage"
             Title="Meine Aquarien">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Label Text="Neues Aquarium" FontAttributes="Bold" FontSize="20" />
            <Entry Placeholder="Name" Text="{Binding NewName}" />
            <Entry Placeholder="Liter" Keyboard="Numeric" Text="{Binding NewVolume}" />
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Entry Placeholder="pH" Grid.Column="0" Keyboard="Numeric" Text="{Binding NewPh}" />
                <Entry Placeholder="GH" Grid.Column="1" Keyboard="Numeric" Text="{Binding NewGh}" />
            </Grid>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Entry Placeholder="KH" Grid.Column="0" Keyboard="Numeric" Text="{Binding NewKh}" />
                <Entry Placeholder="Temp (°C)" Grid.Column="1" Keyboard="Numeric" Text="{Binding NewTemperature}" />
            </Grid>
            <Button Text="Aquarium hinzufügen" Command="{Binding AddAquariumCommand}" />

            <BoxView HeightRequest="1" BackgroundColor="#B0BEC5" />

            <Label Text="Meine Aquarien" FontAttributes="Bold" FontSize="20" />
            <Picker Title="Aquarium auswählen"
                    ItemsSource="{Binding Aquariums}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedAquarium}" />

            <CollectionView ItemsSource="{Binding SelectedAquarium.Residents}" SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="Keine Fische vorhanden." TextColor="#546E7A" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" Margin="0,6" CornerRadius="12" BackgroundColor="#E0F7FA">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="Temperament: {Binding Temperament}" FontSize="12" />
                                <Label Text="Min. Volumen: {Binding MinimumTankSizeLiters} L" FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Fisch hinzufügen" FontAttributes="Bold" FontSize="20" />
            <Picker Title="Fisch auswählen"
                    ItemsSource="{Binding AvailableFish}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedFish}" />
            <Button Text="Fisch ins Aquarium setzen" Command="{Binding AddFishCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
